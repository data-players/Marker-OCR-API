# Application Configuration
APP_NAME="Marker OCR API"
VERSION="1.0.0"
DEBUG=False
ENVIRONMENT="production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Handling
UPLOAD_DIR="./uploads"
OUTPUT_DIR="./outputs"
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=[".pdf"]

# Marker Configuration
MARKER_BATCH_SIZE=1
MARKER_USE_GPU=True
MARKER_FORCE_OCR=False

# Redis Configuration
REDIS_URL="redis://redis:6379/0"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Security
API_KEY=""  # Optional API key for authentication

# LLM Configuration (Infomaniak API)
# Required for LLM analysis feature
# Get your credentials from https://manager.infomaniak.com/v3/ai
LLM_PRODUCT_ID=""  # Your Infomaniak AI product ID (e.g., 105448)
LLM_API_TOKEN=""  # Your Infomaniak API Bearer token (starts with "Bearer ")
LLM_MODEL="mistral3"  # Model to use (e.g., mistral3, gpt-3.5-turbo, gpt-4)
LLM_TIMEOUT=60  # API timeout in seconds

