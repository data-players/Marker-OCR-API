# Optimized Dockerfile for testing (without heavy ML dependencies)
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r testuser && useradd -r -g testuser testuser

# Set working directory
WORKDIR /app

# LEVEL 1: Install minimal requirements for fast test builds
# This uses requirements-minimal.txt (lightest level, no ML models)
# Typical build time: ~30s instead of ~7min with levels 2+3
COPY requirements-minimal.txt .
RUN pip install --no-cache-dir -r requirements-minimal.txt
# Note: For dev/prod, use Dockerfile with all three levels:
#       1. requirements-models.txt (NIVEAU 3)
#       2. requirements-minimal.txt (NIVEAU 1)
#       3. requirements-base.txt (NIVEAU 2)

# Copy application code
COPY . .

# Create necessary directories and change ownership
# Note: /app is mounted read-only, but these subdirs need to be writable
RUN mkdir -p /app/uploads /app/outputs /app/logs /app/test-results && \
    chmod 777 /app/test-results && \
    chown -R testuser:testuser /app

# Switch to non-root user
USER testuser

# Set environment for testing
ENV PYTHONPATH=/app
ENV ENVIRONMENT=test

# Health check (lightweight)
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD python -c "import app.core.config; print('OK')" || exit 1

# Default command for running tests
# Note: Tests are mounted from tests/backend/modelFree/ in docker-compose
CMD ["pytest", "tests/backend/modelFree", "--tb=short", "-v"] 